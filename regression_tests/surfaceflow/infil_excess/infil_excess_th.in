#Description: 

#=========================== flow mode ========================================
MODE TH NO_FREEZING

#=========================== discretization ===================================
GRID
  TYPE UNSTRUCTURED ../surface_flow_only/sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  ROCK_DENSITY 2.8E3
  SPECIFIC_HEAT 1E3
  THERMAL_CONDUCTIVITY_DRY 0.25
  THERMAL_CONDUCTIVITY_WET 1.3
  THERMAL_COND_EXPONENT 0.45
  THERMAL_COND_EXPONENT 0.95
  POROSITY 0.40d0
  TORTUOSITY 0.5d0
  !SATURATION_FUNCTION sf1
  CHARACTERISTIC_CURVES sf1
  PERMEABILITY
    PERM_X 1.171d-13
    PERM_Y 1.171d-13
    PERM_Z 1.171d-13
  /
END

#=========================== saturation functions =============================
skip
SATURATION_FUNCTION sf1
  SATURATION_FUNCTION_TYPE VAN_GENUCHTEN
  RESIDUAL_SATURATION 0.2d0
  LAMBDA 0.5d0
  ALPHA 1.0194d-04
  MAX_CAPILLARY_PRESSURE 1.d8
END
noskip

CHARACTERISTIC_CURVES sf1
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.2d0
    MAX_CAPILLARY_PRESSURE 1.d8
    M 0.5d0
    ALPHA 1.0194d-04
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    LIQUID_RESIDUAL_SATURATION 0.2d0
    M 0.5d0
  /  
END

#=========================== output options ===================================
OUTPUT
  PERIODIC TIME 60. s
#  FORMAT HDF5
END

#=========================== times ============================================
TIME
  FINAL_TIME 18000.d0 s
  INITIAL_TIMESTEP_SIZE 60.0 s
  MAXIMUM_TIMESTEP_SIZE 60.0 s        ! produces CFL ~<= 1.
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 -1.d0
    420.d0 320.d0 5.d0
  /
END 

REGION top
  FILE ../surface_flow_only/sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE HYDROSTATIC
    TEMPERATURE DIRICHLET
  /
  INTERPOLATION linear
  DATUM 0.d0 0.d0 4.0d0
  GRADIENT
    PRESSURE -0.0005 0.0 0.0
  /
  PRESSURE 101325.d0
  TEMPERATURE 10.d0
END

FLOW_CONDITION from_surface
  TYPE
    PRESSURE heterogeneous_surface_seepage
    TEMPERATURE HETEROGENEOUS_DIRICHLET
  /
  PRESSURE 101325.d0
  TEMPERATURE 0.d0
/

FLOW_CONDITION from_atm_subsurface
  TYPE
    PRESSURE neumann
    TEMPERATURE neumann
  /
  FLUX 0.d0
  TEMPERATURE 0.d0
/

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION initial_copuler
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION from_surface_bc
  FLOW_CONDITION from_surface
  REGION top
/

BOUNDARY_CONDITION from_atm_subsurface_bc
  FLOW_CONDITION from_atm_subsurface
  REGION top
/

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

#===============================================================================
#=========================== surface flow ======================================
#===============================================================================
SURFACE_FLOW

SURF_GRID
  TYPE UNSTRUCTURED ../surface_flow_only/sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
END

SURF_FLOW_FORMULATION diffusive

SURF_SUBSURFACE_COUPLING
  seq_coupled
END

SURF_MATERIAL_PROPERTY surf1
  ID 1
  MANNINGS 0.02
END

SURF_TIME
  INITIAL_TIMESTEP_SIZE 60.0 s
  MAXIMUM_TIMESTEP_SIZE 60.0 s
  COUPLING_TIMESTEP_SIZE 60.0 s
END

#=========================== output ==========================================
SURF_OUTPUT
  PERIODIC TIME 60 s
  HYDROGRAPH
END

#=========================== regions ==========================================
SURF_REGION surf_all
  COORDINATES
    0.d0 0.d0 0.d0
    400.d0 320.d0 100.d0
  /
END 

SURF_REGION surf_east
  FILE ../surface_flow_only/sloping_plane_400X_320Y_80dx_80dy_0.2000dz_0.0005slope.h5
END

#=========================== flow conditions ==========================================
SURF_FLOW_CONDITION atm_rain_forcing
  TYPE
    RATE volumetric_rate
    TEMPERATURE DIRICHLET
  /
  RATE LIST
    TIME_UNITS sec
    DATA_UNITS m/sec
    0.d0 5.5d-6
    12000.d0 0.d0
  /
  TEMPERATURE 1.d0
END

SURF_FLOW_CONDITION atm_energy_forcing
  TYPE
    RATE volumetric_rate
    ENERGY_RATE energy_rate
  /
  RATE 0.d0
  ENERGY_RATE 0.d0
END

SURF_FLOW_CONDITION surf_initial
  TYPE
    PRESSURE HYDROSTATIC
    TEMPERATURE DIRICHLET
  /
  INTERPOLATION linear
  DATUM 0.d0 0.d0 1.0d0
  PRESSURE 111325.d0
  TEMPERATURE 1.d0
END

SURF_FLOW_CONDITION outflow
  TYPE
    PRESSURE ZERO_GRADIENT
    TEMPERATURE DIRICHLET
  /
  PRESSURE 101325.d0
  TEMPERATURE 1.d0
END

#=========================== condition couplers ===============================
# source condition
SURF_SOURCE_SINK atm_rain_ss
  SURF_FLOW_CONDITION atm_rain_forcing
  SURF_REGION surf_all
/

SURF_SOURCE_SINK atm_energy_ss
  SURF_FLOW_CONDITION atm_energy_forcing
  SURF_REGION surf_all
/

# initial condition
SURF_INITIAL_CONDITION surf_initial_coupler
  FLOW_CONDITION surf_initial
  REGION surf_all
END

SURF_BOUNDARY_CONDITION surf_east_bc
  SURF_FLOW_CONDITION outflow
  SURF_REGION surf_east
END

#=========================== stratigraphy couplers ============================
STRATA
  SURF_REGION surf_all
  MATERIAL surf1
END

END
