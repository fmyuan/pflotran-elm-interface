# 1d unsaturated column with infiltration
# test for applying multiphase initial condition
# Jenn 06.18.2018
#
#=========================== flow mode ========================================

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE WIPP_FLOW
      OPTIONS
        DEFAULT_ALPHA
      /
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 4
END

#=========================== datasets =========================================
DATASET liquid_pressure
  FILENAME ../../../general/initcond_small2D.h5
  HDF5_DATASET_NAME hydrostatic_boundary_LP
END

DATASET gas_saturation
  FILENAME ../../../general/initcond_small2D.h5
  HDF5_DATASET_NAME hydrostatic_boundary_GS
END

#=========================== chemistry ========================================
#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 4 1 10
  DXYZ
   10.0d0
   10.0d0
   10.0d0
  END
END

#=========================== timestepper ======================================
TIMESTEPPER FLOW
#  MAX_STEPS 1
END

#=========================== times ============================================
TIME
  FINAL_TIME 1.d-2 yr
  INITIAL_TIMESTEP_SIZE 1.d-4 y
  MAXIMUM_TIMESTEP_SIZE 1.d0 y
END

#=========================== output options ===================================
OUTPUT
  OBSERVATION_FILE
    PERIODIC TIMESTEP 1
  /
  MASS_BALANCE_FILE
    PERIODIC TIMESTEP 1
  /
  SNAPSHOT_FILE
    FORMAT HDF5
  /
  VELOCITY_AT_CENTER
  VARIABLES
    LIQUID_PRESSURE
    LIQUID_DENSITY
    LIQUID_SATURATION
  /
END
#=========================== observation points ===============================

#=========================== fluid properties =================================

#=========================== material properties ==============================
MATERIAL_PROPERTY alluvium
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.20
  TORTUOSITY_FUNCTION_OF_POROSITY 1.4
  SOIL_COMPRESSIBILITY 1.6d-8 #1/Pa
  SOIL_COMPRESSIBILITY_FUNCTION DEFAULT
  SOIL_REFERENCE_PRESSURE 101325.d0
  ROCK_DENSITY 2700.
  PERMEABILITY
    PERM_ISO 1.d-12
  /
/

#=========================== saturation functions =============================
CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.1d0
    M 0.5 
    ALPHA 1.d-3
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    LIQUID_RESIDUAL_SATURATION 0.1d0
    M 0.5
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    LIQUID_RESIDUAL_SATURATION 0.1d0
    GAS_RESIDUAL_SATURATION 0.1d0
    M 0.5
  /
END

#=========================== flow conditions ==================================

FLOW_CONDITION initial
  TYPE 
    LIQUID_PRESSURE DIRICHLET
    GAS_SATURATION DIRICHLET
  /
  LIQUID_PRESSURE DATASET liquid_pressure
  GAS_SATURATION DATASET gas_saturation
END

FLOW_CONDITION infiltration
  TYPE
    LIQUID_FLUX NEUMANN
    GAS_FLUX NEUMANN
  /
  LIQUID_FLUX 1. mm/yr
  GAS_FLUX 0. mm/yr
END

#=========================== transport conditions and constraints ==============
#=========================== regions ==========================================
REGION all
  COORDINATES
    0.000000 0.000000 0.000000
    40.000000 10.000000 100.000000
  /
END

REGION top_face
  FACE TOP
  COORDINATES
    0.000000 0.000000 100.000000
    40.000000 10.000000 100.000000
  /
END

#======================= boundary condition couplers ===========================
BOUNDARY_CONDITION top_face
  FLOW_CONDITION infiltration
  REGION top_face
END

#============================= initial condition couplers ======================
INITIAL_CONDITION initial
  FLOW_CONDITION initial
  REGION all
END

#============================= source_sink couplers ============================
#============================= strata ==========================================
STRATA
  REGION all
  MATERIAL alluvium
END

END_SUBSURFACE
