#Description: 1D variably saturated flow problem

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 2
END

#=========================== solver options ===================================
LINEAR_SOLVER FLOW
  SOLVER DIRECT
END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 3 1 3
  BOUNDS
    0.d0 0.d0 0.d0
    3.d0 1.d0 3.d0
  /
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  PERMEABILITY
    PERM_ISO 1.d-12
  /
  CHARACTERISTIC_CURVES cc1
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES cc1
  SATURATION_FUNCTION VAN_GENUCHTEN
    ALPHA  1.d-4
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
OUTPUT
skip
  PERIODIC TIME 0.1 y
  FORMAT HDF5
  VELOCITY_AT_CENTER
noskip
END

#=========================== times ============================================
TIME
  FINAL_TIME 2.d0 y
  INITIAL_TIMESTEP_SIZE 1.d0 d
  MAXIMUM_TIMESTEP_SIZE 0.1d0 y
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20
    1.d20 1.d20 1.d20
  /
END

REGION inactive1
  COORDINATES
    1.d0 0.d0 1.d0
    2.d0 1.d0 3.d0
  /
END

REGION inactive2
  COORDINATES
    2.d0 0.d0 2.d0
    3.d0 1.d0 3.d0
  /
END

REGION surface1
  FACE TOP
  COORDINATES
    0.d0 0.d0 3.d0
    1.d0 1.d0 3.d0
  /
END

REGION surface2
  FACE TOP
  COORDINATES
    2.d0 0.d0 2.d0
    3.d0 1.d0 2.d0
  /
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    PRESSURE HYDROSTATIC
  /
  DATUM 0.d0 0.d0 1.d0
  PRESSURE 101325.d0
END

FLOW_CONDITION seepage
  TYPE
    PRESSURE DIRICHLET_SEEPAGE
  /
  PRESSURE 101325.d0
END

FLOW_CONDITION recharge
  TYPE
    FLUX NEUMANN
  /
  FLUX 10.d0 cm/y
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION seepage1
  FLOW_CONDITION seepage
  REGION surface1
END

BOUNDARY_CONDITION seepage2
  FLOW_CONDITION seepage
  REGION surface2
END

BOUNDARY_CONDITION surface1_recharge
  FLOW_CONDITION recharge
  REGION surface1
END

BOUNDARY_CONDITION surface2_recharge
  FLOW_CONDITION recharge
  REGION surface2
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

STRATA
  REGION inactive1
  MATERIAL soil1
  INACTIVE
END

STRATA
  REGION inactive2
  MATERIAL soil1
  INACTIVE
END

END_SUBSURFACE
