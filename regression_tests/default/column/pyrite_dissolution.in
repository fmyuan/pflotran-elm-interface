#Description# 1D pyrite oxidation problem

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    / 
  /
END

SUBSURFACE

REFERENCE_TEMPERATURE 25.d0

REGRESSION
  CELLS
    1 
    2
    4
    8
  /
END

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Fe++    
    H+      
    HSO4-
    O2(aq)
  /
  SECONDARY_SPECIES
    OH-
    H2(aq)
    Fe+++
    #FeOH+
    Fe(OH)2+
    FeOH++
    Fe(OH)3(aq)
    Fe(OH)4-
    FeSO4(aq)
#    HSO4-
    H2SO4(aq)
    HS-
    H2S(aq)
    SO4--   
  /
  GAS_SPECIES
    O2(g)
  /
  MINERALS
    Ferrihydrite
    Pyrite
  /
  MINERAL_KINETICS
    Pyrite
#     RATE_CONSTANT -8.d0
     RATE_CONSTANT -6.d0
    /
    Ferrihydrite
      RATE_CONSTANT -7.d0
    /
  /
  DATABASE ../../../database/hanford.dat
  LOG_FORMULATION
#  OPERATOR_SPLITTING
  ACTIVITY_COEFFICIENTS TIMESTEP
  OUTPUT
    PH
    Fe++    
    H+      
    HSO4-
    O2(aq)
    FREE_ION
    Pyrite
  /
END

# == flow solvers =============================================================
# == transport solvers ========================================================
NEWTON_SOLVER TRANSPORT
  #PRECONDITIONER_MATRIX_TYPE AIJ
  RTOL 1.d-12
  ATOL 1.d-12
  STOL 1.d-30
  #NO_INFINITY_NORM
  #NO_PRINT_CONVERGENCE
  #PRINT_DETAILED_CONVERGENCE
/

LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
  LU_ZERO_PIVOT_TOL 1.d-15
/

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 1 1 80 
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 20.d0 
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY 
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 2
  POROSITY 0.1d0
  TORTUOSITY 0.5d0
  CHARACTERISTIC_CURVES default
  PERMEABILITY
    PERM_X 1.d-12
    PERM_Y 1.d-12
    PERM_Z 1.d-12
  /
END

#=========================== characteristic curves ============================
CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VAN_GENUCHTEN
    M 0.5d0
    ALPHA  1.d-4
    LIQUID_RESIDUAL_SATURATION 0.1d0
    MAX_CAPILLARY_PRESSURE 1.d8
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    M 0.5d0
    LIQUID_RESIDUAL_SATURATION 0.1d0
  /
END

#=========================== output options ===================================
OUTPUT
  TIMES y 0.01 0.1 1. 10. 25. 50. 100.
  FORMAT TECPLOT POINT
  FORMAT HDF5
# VELOCITIES
  MASS_BALANCE
  PERIODIC_OBSERVATION TIMESTEP 1
  PRINT_COLUMN_IDS
END

#=========================== times ============================================
TIME
  FINAL_TIME 10.d0 y
  INITIAL_TIMESTEP_SIZE 1.d-8 y
  MAXIMUM_TIMESTEP_SIZE 0.25d0 y
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    1.d0 1.d0 20.d0 
  /
END

REGION bottom
  FACE BOTTOM
  COORDINATES
    0.d0 0.d0 0.d0
    1.d0 1.d0 0.d0 
  /
END

REGION top
  FACE TOP
  COORDINATES
    0.d0 0.d0 20.d0 
    1.d0 1.d0 20.d0 
  /
END

REGION obs
  COORDINATES
    0.d0 0.d0 20.d0
    1.d0 1.d0 20.d0
  /
/

OBSERVATION
  REGION obs
/

#=========================== flow conditions ==================================
SPECIFIED_VELOCITY
  UNIFORM? YES
  DATASET 0.d0 0.d0 -0.1d0 m/yr
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE dirichlet
  CONSTRAINT_LIST
    0.d0 initial
  /
END

TRANSPORT_CONDITION top
  TYPE dirichlet
  CONSTRAINT_LIST
    0.d0 inlet
  /
END

TRANSPORT_CONDITION bottom
  TYPE zero_gradient
  CONSTRAINT_LIST
    0.d0 initial
  /
END

#=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    Fe++      1.d-4  T
    H+        7.d0  pH
    HSO4-     1.d-3  Z
    O2(aq)    0.2d0  M Pyrite
  /
  MINERALS
    Pyrite       0.04d0  1.d3
    Ferrihydrite 0.d0    1.d2
  /
END

CONSTRAINT inlet
  CONCENTRATIONS
    Fe++      1.d-9  M Ferrihydrite
    H+        5.d0  pH
    HSO4-     1.d-3  Z
    O2(aq)    0.2d0  G O2(g)
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  TRANSPORT_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION bottom
  TRANSPORT_CONDITION bottom
  REGION bottom
END

BOUNDARY_CONDITION top
  TRANSPORT_CONDITION top
  REGION top
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END
