#Description: Radon generation and decay

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_TRANSPORT transport
      MODE GIRT
    /
  /
END

SUBSURFACE

REFERENCE_SATURATION 0.1

#=========================== numerical methods ================================
NUMERICAL_METHODS TRANSPORT

  LINEAR_SOLVER
    SOLVER DIRECT
  /

END

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 1
END

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    Rn(aq)
    SiO2(aq)
  /
  ACTIVE_GAS_SPECIES
    GAS_TRANSPORT_IS_UNVETTED
    Rn(g)
  /
  MINERALS
    Quartz
  /
  MINERAL_KINETICS
    Quartz
      RATE_CONSTANT 0.d0
    /
  /
  REACTION_SANDBOX
    RADON
      SPECIES_NAME Rn(aq)
      MINERAL_NAME Quartz
      RADON_GENERATION_RATE 1.0856503d-05
    /
  /
  RADIOACTIVE_DECAY_REACTION
    REACTION Rn(aq) <->
    HALF_LIFE 3.8235 d
  /
  DATABASE ../../../database/hanford.dat
  LOG_FORMULATION
  ACTIVITY_COEFFICIENTS OFF
  OUTPUT
    TOTAL
    ALL
    GASES
  /
END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 1 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 1.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
END

#=========================== output options ===================================
OUTPUT
  PERIODIC_OBSERVATION TIMESTEP 1
  FORMAT TECPLOT POINT
  PRINT_COLUMN_IDS
END

#=========================== times ============================================
TIME
  FINAL_TIME 1.d0 y
  INITIAL_TIMESTEP_SIZE 1.d0 h
  MAXIMUM_TIMESTEP_SIZE 1.d-2 y
END

#=========================== observatoin points ===============================
OBSERVATION
  REGION all
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    -1.d20 -1.d20 -1.d20
    1.d20 1.d20 1.d20
  /
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE ZERO_GRADIENT
  CONSTRAINT_LIST
    0.d0 initial
  /
END

#=========================== constraints ======================================
CONSTRAINT initial
  CONCENTRATIONS
    Rn(aq)    1.d-40  T
    SiO2(aq)  1.d-9   M Quartz
  /
  MINERALS
    Quartz  0.1d0 0.d0 m^2/m^3
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  TRANSPORT_CONDITION initial
  REGION all
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE
