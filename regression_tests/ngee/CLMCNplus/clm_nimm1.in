#Description: CLM-CN N immobilization module test
# (1) NH4-N as reactant

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_TRANSPORT transport
      GLOBAL_IMPLICIT
    /
  /
END

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS
    1
  /
END

#=========================== useful tranport parameters =======================
SPECIFIED_VELOCITY
  UNIFORM? YES
  DATASET 0.d0 0.d0 0.d0
END

REFERENCE_LIQUID_DENSITY 1.d3

#=========================== chemistry ========================================
CHEMISTRY
  PRIMARY_SPECIES
    CO2(aq)
    NH4+
  /
  
  IMMOBILE_SPECIES
    SOM1
    Lit1C
    Lit1N
  /
  
  REACTION_SANDBOX
    SOMDECOMP
      POOLS
        SOM1 12.d0
        Lit1
      /

      REACTION
        UPSTREAM_POOL Lit1
        DOWNSTREAM_POOL SOM1 0.61d0
        TURNOVER_TIME 20. h
      /
      
      AMMONIUM_HALF_SATURATION 1.0d-5      ! unit: moles/m3 (default: 1.d-15)

    /

  /

  !LOG_FORMULATION

  DATABASE ./CLM-CN_database.dat

  OUTPUT
    all
    TOTAL
  /
END

#=========================== solver options ===================================
LINEAR_SOLVER TRANSPORT
  SOLVER DIRECT
END

NEWTON_SOLVER TRANSPORT
  ATOL 1.d-25
  RTOL 1.d-10
  STOL 1.d-10
END

#=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 1 1 1
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 1.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY 
  DIFFUSION_COEFFICIENT 0.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
END

#=========================== output options ===================================
OUTPUT
  PERIODIC TIMESTEP 1
  !FORMAT HDF5
END

#=========================== times ============================================
TIME
  FINAL_TIME 50.d0 d
  INITIAL_TIMESTEP_SIZE 1.0d0 min
  MINIMUM_TIMESTEP_SIZE 1.0d-1 min
  MAXIMUM_TIMESTEP_SIZE 1.d0 h
END

#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    1.d0 1.d0 1.d0
  /
END

REGION obs_pt
  COORDINATE 0.5 0.5 0.5
END

#=========================== observation points ===============================
OBSERVATION
  REGION obs_pt
END

#=========================== transport conditions =============================
TRANSPORT_CONDITION initial
  TYPE zero_gradient
  CONSTRAINT_LIST
    0.d0 initial
  /
END

#=========================== transport constraints ============================
CONSTRAINT initial
  CONCENTRATIONS
    CO2(aq)  1.d-40     T  ! moles/L
    NH4+     8.d-4      T  ! moles/L
  /
  IMMOBILE
    SOM1  1.d-40
    Lit1C 1.852d1
    Lit1N 0.0508954d1
  /
END

#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION
  TRANSPORT_CONDITION initial
  REGION all
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE


