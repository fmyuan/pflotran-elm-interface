# TOIL hydrostatic initialisation - test inverse of Pcow table - 20 Aug 2018
SIMULATION
  SIMULATION_TYPE SUBSURFACE
  !SIMULATION_TYPE GEOMECHANICS_SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW Flow
      MODE TOIL_IMS
      OPTIONS
       MAXIMUM_PRESSURE_CHANGE 5.D4
       ANALYTICAL_JACOBIAN
       !ISOTHERMAL
       !TOUGH2_ITOL_SCALED_RESIDUAL 1.d-5 1.d0
      /
    / ! end of subsurface_flow
    !GEOMECHANICS_SUBSURFACE geomech ! geomech not currenlty used
    !GEOMECHANICS_SUBSURFACE xxx ! at least one "x" to avoid input error 
  / ! end of process models
END  !! end simulation 

SUBSURFACE

#=========================== regression =======================================
REGRESSION
  CELLS
    1
    2
    13
    14
    23
    24
  /
END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  ORIGIN 0.d0 0.d0 0.d0
  NXYZ 1 1 24
  BOUNDS
    0.d0 0.0 0.0
    50.d0  50.d0  120.d0
  /
END

#=========================== solver options ===================================
TIMESTEPPER FLOW
  TS_ACCELERATION 4
  !TS_ACCELERATION 12
  !MAX_PRESSURE_CHANGE 5.e5
  !MAX_TEMPERATURE_CHANGE 5.d0
  !MAX_SATURATION_CHANGE 0.025
/

NEWTON_SOLVER FLOW
  ATOL 1D-8
  RTOL 1D-8
  STOL 1D-30
  DTOL 1D15
  ITOL 1D-7
  ITOL_UPDATE 1.d0
  MAXIT 8
END

#=========================== times ============================================
TIME
  FINAL_TIME 0.1d0 d
  INITIAL_TIMESTEP_SIZE 1.0d-2 d  
  MAXIMUM_TIMESTEP_SIZE 50.d0 d
/

#=========================== output options ===================================
skip
OUTPUT
  TIMES d 0.0 0.10d0
  FORMAT HDF5
  VARIABLES
    TEMPERATURE
    LIQUID_PRESSURE
    LIQUID_SATURATION
    LIQUID_DENSITY
    LIQUID_MOBILITY
    LIQUID_ENERGY
    OIL_PRESSURE
    OIL_SATURATION
    OIL_DENSITY
    OIL_MOBILITY
    OIL_ENERGY
    CAPILLARY_PRESSURE
  END
END
noskip
#=========================== fluid properties =================================

#=========================== material properties ==============================
MATERIAL_PROPERTY formation
  ID 1
  POROSITY 0.3d0
  TORTUOSITY 1.d0
  ROCK_DENSITY 2.65d3
  SPECIFIC_HEAT 1.d3
  THERMAL_CONDUCTIVITY_DRY 2.1
  THERMAL_CONDUCTIVITY_WET 2.1 
  !SATURATION_FUNCTION sf2
  CHARACTERISTIC_CURVES ch1
  PERMEABILITY
    PERM_X 1.e-13
    PERM_Y 1.e-13
    PERM_Z 1.e-14
  /
/

#=========================== saturation functions =============================
CHARACTERISTIC_CURVES ch1
 #the three instructions below can be used define kr and pc using more tables
 !PC_OW_TABLE swfn_table
 !KRW_TABLE swfn_table
 !KROW_TABLE sof2_table
 #tabbe defintion
 TABLE swfn_table
   PRESSURE_UNITS Pa
   EXTERNAL_FILE swfn_table_hydro.dat
 END
 TABLE sof2_table
   EXTERNAL_FILE sof2_table_hydro.dat
 END
/

#=========================== EOSs =============================================

! if all commented, initialised IFC67 for density, enthaplty and viscosity  
!EOS WATER
!  DENSITY CONSTANT 997.16d0
!  ENTHALPY CONSTANT 1.8890d0
!  VISCOSITY CONSTANT 8.904156d-4
!   VISCOSITY CONSTANT 0.3d-3
!END

EOS OIL
  !DENSITY CONSTANT 300.00d0 !kg/m3
  !DENSITY CONSTANT 734.29d0 !kg/m3
  ! den = den0 + C(p-p1) - E(t-t1)
  DENSITY LINEAR
    REFERENCE_VALUE 734.29d0        !den0 [kg/m3]  
    PRES_REF_VALUE 1.d5             !p1 [Pa]
    TEMP_REF_VALUE 15.0             !t1 [°C]
    COMPRESS_COEFF 0.7345d-6        !C [kg/m3/Pa]
    THERMAL_EXPANSION_COEFF 0.774d0 !E [kg/m3/°C]
  END
  ENTHALPY LINEAR_TEMP 1.d3 !J/kg/°C 
  VISCOSITY CONSTANT 3.0d-3
END

#=========================== regions ==========================================
REGION all
COORDINATES
0.d0 0.d0 0.d0
2000.0 2000.0 120.0
/
/

#=========================== flow conditions ==================================
FLOW_CONDITION initial_water
  TYPE
    PRESSURE hydrostatic
    TEMPERATURE dirichlet
  /
  PRESSURE 9.81D6  !about 1000m below sea level
  TEMPERATURE 50.d0 C  !up to here it refers to primary vars
  DATUM_Z 0.d0
  OWC_Z 64.0d0 ! oil water contact
  PCOW_OWC 15226.47
/


#=========================== condition couplers ===============================
INITIAL_CONDITION initial_water
FLOW_CONDITION initial_water
REGION all
/


#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL formation
END

END_SUBSURFACE

